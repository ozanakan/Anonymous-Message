
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserIndex.cshtml";
}

@Html.Raw(TempData["msg"])
<script src="~/scripts/WordToSpeak.js"></script>
<script>
    $(document).ready(function () {
        wordtospeak('Grup kurmak için 1 e grubunuza mesaj atmak için 2 ye gruba katılmak için 3 e grubu düzenlemek için 4 e üye eklemek için 5 e ve grup bilgileri için 6 yı tuşlayınız', true);

        $('body').keyup(function (e) {
            var key = e.which;

            if (key == 97 ) {
                window.location.href = '@Url.Action("Create", "Groups")';
            }
            if (key == 98 ) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
            if (key == 99) {
                window.location.href = '@Url.Action("Join", "Groups")';
            }
            if (key == 100 ) {
                window.location.href = '@Url.Action("EditIndex", "Groups")';
            }
            if (key == 101 ) {
                window.location.href = '@Url.Action("AddUserToGroup", "Groups")';
            }
            if (key == 102) {
                window.location.href = '@Url.Action("InfoIndex", "Groups")';
            }
           
        });
    });

</script>



