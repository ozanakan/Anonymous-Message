<body>

    @Html.Partial("_Navbar")
    @RenderBody()
    <script src="~/scripts/site.js"></script>
    <script src="~/scripts/jquery-3.0.0.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>
    <script type="text/javascript">
      
        function getData() {
            var $tbl = $('#msgInfo').empty();
            $.ajax({
                url: $('#Get').val(),
                type: 'GET',
                data: { id: location.href.split('/').pop() },
                datatype: 'json',
                success: function (data) {
                    $tbl.empty();
                    $.each(data.listMsg, function (i, model) {
                        var $mod = i % 2;
                        if ($mod == 0) {
                            $tbl.append(

                             '<div class="rcorners " read' + i + '="' + model.textContent + '"  >' + model.textContent + '<br>' +
                             '<p style="color:black; text-align:right;">' + model.textOwner + ' | ' + model.textDate +
                             ' | ' + '<a href="../Remove/' + model.textId + '">' + '<i style="color:white;" class="fas fa-trash-alt fa-1x">' + '</i></a>' +
                             '</p>' +

                             '</div>'

                           );
                        }
                        else if ($mod == 1) {
                            $tbl.append(

                             '<div class="lcorners ">' + model.textContent + '<br>' +
                             '<p style="color:black; text-align:right;">' + model.textOwner + ' | ' + model.textDate +
                             ' | ' + '<a href="../Remove/' + model.textId + '">' + '<i style="color:white;" class="fas fa-trash-alt fa-1x">' + '</i></a>' +
                             '</p>' +
                             '</div>'
                             );
                        }
                        else if (model == null) {
                            $tbl.append(
                              '<div class="lcorners ">' + 'boş mesaj yok' + '</div>'
                               );
                        }
                    });
                }
            });
        }

        function CreateMesage() {
            var $text = $('#txt_msg').val();
            $.ajax({
                url: '/TextMessage/createmsg',
                type: 'GET',
                data: { id: location.href.split('/').pop(), tModel: $text },
                datatype: 'json',
                success: function (data) {
                    getData();
                }
            });
        }
    </script>

</body>
</html>
